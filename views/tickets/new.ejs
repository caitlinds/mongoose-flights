<title><%= title %></title>

<br><br><h2>Tickets</h2>
<br>
<form id="add-dest-form" method="POST" action="/flights/<%= flight._id %>/tickets">
  <label>Seat:</label>
  <input name="seat" required pattern="[A-F][1-9]\d?">
  <label>Price:</label>
  <input type="number" name="price">
  <input type="submit" value="Add Ticket">
</form>

